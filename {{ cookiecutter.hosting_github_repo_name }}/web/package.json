        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/preset-react": "^7.14.5",
        "acorn": "^8.5.0",
        "babel-loader": "^8.1.0",
        "copy-webpack-plugin": "^9.0.1",
        "cross-env": "^7.0.3",
        "file-loader": "^6.2.0",
        "gh-pages": "^2.2.0",
        "mini-css-extract-plugin": "^2.3.0",
